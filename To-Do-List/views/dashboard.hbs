<div class='d-flex w-100 h-75 justify-content-center align-items-center flex-column'>
  <div class='card text-bg-secondary mb-3' style='max-width: 18rem;'>
    <div class='card-header'>Dashboard</div>
    <div class='card-body'>
      <h5 class='card-title'>Welcome {{foundUser.username}}!</h5>
      <p class='card-text'>Trying to display some userdate here...
      </p>
    </div>
  </div>

  {{#with foundUser}}
    <h2>Lists of {{username}}</h2>
    <ul>
      {{#each lists}}
        <form class='nav-item ms-5' action='/{{this.id}}' method='POST'>
          <button type='submit' class='nav-link'>{{this.name}}</button>
        </form>
        <form class='w-50 mt-2' action='/{{this.id}}/delete' method='POST'>    
          <button type='submit' class='btn btn-secondary'>X</button>
        </form>
        <form class='w-50 mt-2' action='/{{this.id}}/edit' method='POST'>  
          <span>Edit Name:</span>
          <input type="text" name="name" value="{{this.name}}" >  
          <button type='submit' class='btn btn-secondary'>Save changes</button>
        </form>
      {{/each}}
    </ul>
  {{/with}}

  <form class='w-50 mt-2' action='/newlist' method='POST'>
    <div class='mb-4'>
      <label for='listName' class='form-label text-secondary'>Create new List</label>
      <input type='text' name='listName' class='form-control' required />
    </div>
    <button type='submit' class='btn btn-secondary'>Save new list</button>
  </form>
</div>